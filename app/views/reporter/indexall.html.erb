<p id="notice"><%= notice %></p>

<h1>Your Evaluation Reports</h1>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Course</th>
      <th>Instructor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @surveys.size > 0 %>
    <% @surveys.each do |survey| %>
      <tr>
        <td><%= survey.subj %> <%= survey.crsenum %> <%= survey.sect.to_s.rjust(2,"0") %> -- <%= survey.coursetitle %> [<%= survey.crn %>] (<%= survey.credits %>cr)</td>
        <td><%= survey.instrfirst %> <%= survey.instrlast %></td>
        <td><a href="/reporter/<%= survey.crn %>/show" class="btn btn-danger btn-sm">Complete Evaluation</a></td>
      </tr>
    <% end %>
    <% elsif %>
    <tr><td colspan="3" class="text-center"><h4>You have no pending evaluations.</h4></td></tr>
    <% end %>
  </tbody>
</table>

